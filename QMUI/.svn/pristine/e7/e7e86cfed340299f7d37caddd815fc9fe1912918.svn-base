#import "UIView+QMUILayout.h"
#import "QMUICommonDefines.h"

@implementation UIView (QMUI_Layout)

- (CGFloat)qmui_top {
    return CGRectGetMinY(self.frame);
}

- (void)setQmui_top:(CGFloat)qmui_top {
    self.frame = CGRectSetY(self.frame, qmui_top);
}

- (CGFloat)qmui_left {
    return CGRectGetMinX(self.frame);
}

- (void)setQmui_left:(CGFloat)qmui_left {
    self.frame = CGRectSetX(self.frame, qmui_left);
}

- (CGFloat)qmui_bottom {
    return CGRectGetMaxY(self.frame);
}

- (void)setQmui_bottom:(CGFloat)qmui_bottom {
    self.frame =CGRectSetY(self.frame, qmui_bottom - CGRectGetHeight(self.frame));
}

- (CGFloat)qmui_right {
    return CGRectGetMaxX(self.frame);
}

- (void)setQmui_right:(CGFloat)qmui_right {
    self.frame = CGRectSetX(self.frame, qmui_right - CGRectGetWidth(self.frame));
}

- (CGPoint)qmui_center {
    return self.center;
}

- (void)setQmui_center:(CGPoint)qmui_center {
    self.center = qmui_center;
}

- (CGFloat)qmui_centerX {
    return self.center.x;
}

- (void)setQmui_centerX:(CGFloat)qmui_centerX {
    self.center = CGPointMake(qmui_centerX, self.center.y);
}

- (CGFloat)qmui_centerY {
    return self.center.y;
}

- (void)setQmui_centerY:(CGFloat)qmui_centerY {
    self.center = CGPointMake(self.center.x, qmui_centerY);
}

- (CGFloat)qmui_width {
    return CGRectGetWidth(self.frame);
}

- (void)setQmui_width:(CGFloat)qmui_width {
    self.frame = CGRectSetWidth(self.frame, qmui_width);
}

- (CGFloat)qmui_height {
    return CGRectGetHeight(self.frame);
}

- (void)setQmui_height:(CGFloat)qmui_height {
    self.frame = CGRectSetHeight(self.frame, qmui_height);
}

static char kAssociatedObjectKey_Qmui_margins;
- (UIEdgeInsets)qmui_margins {
    return [((NSValue *)objc_getAssociatedObject(self, &kAssociatedObjectKey_Qmui_margins)) UIEdgeInsetsValue];
}

- (void)setQmui_margins:(UIEdgeInsets)argv {
    objc_setAssociatedObject(self, &kAssociatedObjectKey_Qmui_margins, [NSValue valueWithUIEdgeInsets:argv], OBJC_ASSOCIATION_RETAIN_NONATOMIC);
}

- (CGFloat)qmui_extendToTop {
    return self.qmui_top;
}

- (void)setQmui_extendToTop:(CGFloat)qmui_extendToTop {
    self.qmui_height += self.qmui_top - qmui_extendToTop;
    self.qmui_top = qmui_extendToTop;
}

- (CGFloat)qmui_extendToLeft {
    return self.qmui_left;
}

- (void)setQmui_extendToLeft:(CGFloat)qmui_extendToLeft {
    self.qmui_width += qmui_extendToLeft - self.qmui_left;
}

- (CGFloat)qmui_extendToBottom {
    return self.qmui_bottom;
}

- (void)setQmui_extendToBottom:(CGFloat)qmui_extendToBottom {
    self.qmui_height += qmui_extendToBottom - self.qmui_bottom;
}

- (CGFloat)qmui_extendToRight {
    return self.qmui_right;
}

- (void)setQmui_extendToRight:(CGFloat)qmui_extendToRight {
    self.qmui_width += qmui_extendToRight - self.qmui_right;
}

static char kAssociatedObjectKey_Qmui_sameWidthAndBelowToView;
- (UIView *)qmui_sameWidthAndBelowToView {
    return (UIView *)objc_getAssociatedObject(self, &kAssociatedObjectKey_Qmui_sameWidthAndBelowToView);
}

- (void)setQmui_sameWidthAndBelowToView:(UIView *)view {
    self.qmui_left = view.qmui_left;
    self.qmui_width = view.qmui_width;
    self.qmui_top = view.qmui_bottom + view.qmui_margins.bottom + self.qmui_margins.top;
    
    objc_setAssociatedObject(self, &kAssociatedObjectKey_Qmui_sameWidthAndBelowToView, view, OBJC_ASSOCIATION_ASSIGN);
}

@end
